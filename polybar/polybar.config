[bar/top]
monitor = eDP-1
width = 100%
height = 56

background = #00000000
foreground = #ffffffff

line-color = #ffffff

module-margin = 3
padding-right = 6
padding-left = 6

font-0 = NotoSans-Regular:size=20;-1
font-1 = MaterialIcons:size=22;0
font-2 = Termsynu:size=20:antialias=false;-2
font-3 = FontAwesome:size=22;0

; modules-left = powermenu mpd
modules-left = powermenu title
modules-right = pulseaudio backlight keyboard wireless-network battery date


[bar/bottom]
monitor = ${bar/top.monitor}
width = 100%
height = 46

bottom = true

background = ${bar/top.background}
foreground = ${bar/top.foreground}

line-color = ${bar/top.background}
line-size = 40

module-margin = ${bar/top.module-margin}
padding-right = ${bar/top.padding-right}
padding-left = ${bar/top.padding-left}
padding-bottom = 6

font-0 = ${bar/top.font-0}
font-1 = ${bar/top.font-1}
font-2 = ${bar/top.font-2}
font-3 = ${bar/top.font-3}

modules-left = i3 
modules-right = cpu memory temperature

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev


[module/powermenu]
type = custom/menu

label-open = 
label-close = 

format-padding = 5
label-separator = " | "

menu-0-0 = Lock
menu-0-0-exec = ~/.i3lock.sh

menu-0-1 = Reset
menu-0-1-exec = /sbin/reboot

menu-0-2 = Logout
menu-0-2-exec = loginctl terminate-user $UID

menu-0-3 = Shutdown
menu-0-3-exec = /sbin/shutdown now


[module/title]
type = internal/xwindow

format = <label>
format-foreground = #aaffffff
format-padding = 4

label =  %title%
label-maxlen = 50


[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

format-online = <icon-prev> <icon-stop> <toggle> <icon-next>  <icon-repeat> <icon-random>  <bar-progress> <label-time>  <label-song>

icon-play = 
icon-pause = 
icon-stop = 
icon-prev = 
icon-next = 
icon-random = 
icon-repeat = 

toggle-on-foreground =
toggle-off-foreground = #55

bar-progress-width = 45
bar-progress-format = %{A4:mpdseek+2: A5:mpdseek-2:}%fill%%indicator%%empty%%{A A}
bar-progress-indicator = |
bar-progress-indicator-foreground = #ff
bar-progress-indicator-font = 3
bar-progress-fill = ─
bar-progress-fill-foreground = #bb
bar-progress-fill-font = 3
bar-progress-empty = ─
bar-progress-empty-font = 3
bar-progress-empty-foreground = #44


[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo

speaker-mixer = Speaker
headphone-mixer = Headphone
headphone-id = 9

format-volume = <ramp-volume> <bar-volume>
label-muted =  
label-muted-foreground = #c9665e

bar-volume-width = 10
bar-volume-indicator = |
bar-volume-indicator-font = 3
bar-volume-indicator-foreground = #ff
bar-volume-fill = ─
bar-volume-fill-font = 3
bar-volume-fill-foreground = #c9665e
bar-volume-empty = ─
bar-volume-empty-font = 3
bar-volume-empty-foreground = #44

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 


[module/backlight]
type = internal/backlight

card = intel_backlight
output = eDP-1
enable-scroll = true

format = <ramp> <bar>
label = %percentage%%

ramp-0 = 
ramp-1 = 
ramp-2 = 

bar-width = 10
bar-indicator = |
bar-indicator-font = 3
bar-indicator-foreground = #ff
bar-fill = ─
bar-fill-font = 3
bar-fill-foreground = #c9665e
bar-empty = ─
bar-empty-font = 3
bar-empty-foreground = #44


[module/keyboard]
type = internal/xkeyboard

blacklist-0 = num lock
blacklist-1 = scroll lock

format = <label-layout>
format-spacing = 0

label-layout =  %layout%
label-layout-padding = 2
label-layout-foreground = #ff


[module/wireless-network]
type = internal/network
interface = wlp2s0
interval = 3.0
ping-interval = 10

format-connected = <ramp-signal> <label-connected>
label-connected = %essid% %downspeed:9% %upspeed:9% %local_ip%
label-disconnected = 
label-disconnected-foreground = #c9665e

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 

animation-packetloss-0 = 
animation-packetloss-0-foreground = #ffa64c
animation-packetloss-1 = 
animation-packetloss-1-foreground = ${bar/top.foreground}
animation-packetloss-framerate = 500


[module/battery]
type = internal/battery
full-at = 98

battery = BAT0
adapter = AC

time-format = %H:%M

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>

label-charging = %percentage% (%consumption% W)
label-discharging = %percentage% (%consumption% W)
label-full = %percentage% (%consumption% W)

label-full-forground = #4cc552

ramp-capacity-0 = 
ramp-capacity-0-foreground = #c9665e
ramp-capacity-1 = 
ramp-capacity-1-foreground = #ffa900
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

bar-capacity-width = 10
bar-capacity-format = %{+u}%{+o}%fill%%empty%%{-u}%{-o}
bar-capacity-fill = █
bar-capacity-fill-foreground = #ddffffff
bar-capacity-fill-font = 3
bar-capacity-empty = █
bar-capacity-empty-font = 3
bar-capacity-empty-foreground = #44ffffff

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750


[module/date]
type = internal/date
date = %%{F#99}%Y-%m-%d%%{F-}  %%{F#fff}%H:%M%%{F-}
date-alt = %%{F#fff}%A, %d %B %Y  %%{F#fff}%H:%M%%{F#666}:%%{F#fba922}%S%%{F-}


[module/i3]
type = internal/i3

format = <label-state> <label-mode> 

label-separator = |
label-separator-padding = 2
label-separator-foreground = #88ffffff

label-urgent = %icon%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-underline = #9b0a20
label-urgent-font = 14
label-urgent-padding = 4

label-visible = %index%
label-visible-underline = #555555
label-visible-padding = 4


[module/cpu]
type = internal/cpu
interval = 0.4
format = <label>   <ramp-coreload>
label = %percentage%% .
label-foreground = #99555555

ramp-coreload-0 = ▁
ramp-coreload-0-font = 2
ramp-coreload-0-foreground = #55555555
ramp-coreload-1 = ▂
ramp-coreload-1-font = 2
ramp-coreload-1-foreground = #66555555
ramp-coreload-2 = ▃
ramp-coreload-2-font = 2
ramp-coreload-2-foreground = #77555555
ramp-coreload-3 = ▄
ramp-coreload-3-font = 2
ramp-coreload-3-foreground = #88555555
ramp-coreload-4 = ▅
ramp-coreload-4-font = 2
ramp-coreload-4-foreground = #99555555
ramp-coreload-5 = ▆
ramp-coreload-5-font = 2
ramp-coreload-5-foreground = #aa555555
ramp-coreload-6 = ▇
ramp-coreload-6-font = 2
ramp-coreload-6-foreground = #bb555555
ramp-coreload-7 = █
ramp-coreload-7-font = 2
ramp-coreload-7-foreground = #cc555555


[module/temperature]
type = internal/temperature

format = <label>
format-warn = <label-warn>

interval = 0.5

thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input

warn-temperature = 50

label-foreground = #99555555
label-warn-foreground = #99c9665e


[module/memory]
type = internal/memory
format = <label> <ramp-used>

label = %gb_used%
label-foreground = #99555555

ramp-used-0 = ▁
ramp-used-0-font = 2
ramp-used-0-foreground = #55555555
ramp-used-1 = ▂
ramp-used-1-font = 2
ramp-used-1-foreground = #66555555
ramp-used-2 = ▃
ramp-used-2-font = 2
ramp-used-2-foreground = #77555555
ramp-used-3 = ▄
ramp-used-3-font = 2
ramp-used-3-foreground = #88555555
ramp-used-4 = ▅
ramp-used-4-font = 2
ramp-used-4-foreground = #99555555
ramp-used-5 = ▆
ramp-used-5-font = 2
ramp-used-5-foreground = #aa555555
ramp-used-6 = ▇
ramp-used-6-font = 2
ramp-used-6-foreground = #bb555555
ramp-used-7 = █
ramp-used-7-font = 2
ramp-used-7-foreground = #cc555555

