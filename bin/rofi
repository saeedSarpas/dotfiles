    -color-urgent "argb:ffe53935, argb:fff3f4f5, argb:00000000, argb:00000000, argb:ff9575cd" \
    -color-active "argb:00000000, argb:fff3f4f5, argb:00000000, argb:00000000, argb:ff9575cd" \
    -color-window "argb:dd2f343f, argb:dd2f343f, argb:dd2f343f"
