#!/bin/bash

/bin/rofi -show $1 \
          -separator-style none -font "Yosemite San Francisco 12"\
          -columns 1 -width 100 -padding 1500% -dpi 96 \
          -lines 8 -bw 0 -eh 1.5 -hide-scrollbar true \
          -show-icons \
          -color-enable true \
          -color-normal "argb:00000000, argb:fff3f4f5, argb:00000000, argb:00000000, argb:ff9575cd" \
          -color-urgent "argb:ffe53935, argb:fff3f4f5, argb:00000000, argb:00000000, argb:ff9575cd" \
          -color-active "argb:00000000, argb:fff3f4f5, argb:00000000, argb:00000000, argb:ff9575cd" \
          -color-window "argb:dd2f343f, argb:dd2f343f, argb:dd2f343f"
